<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.acv.meetmarket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bacground"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/splash_bototm" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/splash_bototm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <LinearLayout
            android:id="@+id/splash_btn_signin_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/splash_btn_signin"
                android:layout_width="@dimen/dimen_238dp"
                android:layout_height="@dimen/dimen_69dp"
                android:background="@drawable/mm_onboarding_button_signin"
                custom:txtTouch="yes" />
        </LinearLayout>

        <org.com.atmarkcafe.sky.customviews.charting.MTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/text_1"
            android:textColor="#323030"
            android:textSize="@dimen/dimen_14dp"
            custom:txtFont="light" />
    </LinearLayout>

</RelativeLayout>