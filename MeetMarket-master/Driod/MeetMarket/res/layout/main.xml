<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.acv.meetmarket"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/launch_image" />

    <FrameLayout
        android:id="@+id/main_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_62dp"
            android:background="#ebebeb" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <FrameLayout
                    android:id="@+id/main_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </FrameLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/map_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ebebeb" >

                    <fragment
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.google.android.gms.maps.SupportMapFragment" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_5dp" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_marginTop="@dimen/dimen_3dp"
                            android:background="@android:color/white"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:paddingRight="@dimen/dimen_5dp" >

                            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:id="@+id/mapchoose_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/dimen_35dp"
                                android:paddingRight="@dimen/dimen_0dp"
                                android:text="@string/text_16"
                                android:textColor="#d6402b"
                                android:textSize="@dimen/dimen_16dp"
                                android:textStyle="bold"
                                custom:txtFont="bold" />

                            <ImageView
                                android:layout_width="@dimen/dimen_19dp"
                                android:layout_height="@dimen/dimen_29dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/mm_createmeeting_icon_pin" />

                            <ImageView
                                android:layout_width="@dimen/dimen_14dp"
                                android:layout_height="@dimen/dimen_9dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/mm_createmeeting_icon_dropdown" />
                        </RelativeLayout>

                        <org.com.atmarkcafe.sky.customviews.charting.MTextView
                            android:id="@+id/mapchoose_choose"
                            android:layout_width="@dimen/dimen_236dp"
                            android:layout_height="@dimen/dimen_66dp"
                            android:layout_marginTop="@dimen/dimen_15dp"
                            android:background="@drawable/mm_dashboard_meeting_card"
                            android:gravity="center"
                            android:text="@string/text_22"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/dimen_15dp"
                            android:textStyle="bold"
                            custom:txtFont="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/menuleft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:choiceMode="singleChoice" />

            <FrameLayout
                android:id="@+id/menuright"
                android:layout_width="@dimen/dimen_320dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:choiceMode="singleChoice" >

                <com.acv.meetmarket.view.MenuView
                    android:id="@+id/menuview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.acv.meetmarket.view.MenuView>
            </FrameLayout>
        </android.support.v4.widget.DrawerLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_66dp"
            android:background="@drawable/mm_header_bg" >

            <RelativeLayout
                android:id="@+id/header_menu"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:id="@+id/header_menu_img1"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dimen_13dp"
                    android:scaleType="center"
                    android:src="@drawable/mm_header_icon_menu" />

                <ImageView
                    android:id="@+id/header_menu_img2"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dimen_13dp"
                    android:scaleType="center"
                    android:src="@drawable/mm_header_icon_menuclose"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/header_notification"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"
                android:padding="@dimen/dimen_13dp"
                android:scaleType="center"
                android:src="@drawable/mm_header_icon_chat" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>