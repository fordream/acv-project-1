<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.acv.meetmarket"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="#ebebeb"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_start"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_5dp" >

                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/createmeeting_date_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="@string/text_16"
                    android:textColor="#d6402b"
                    android:textSize="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    custom:txtFont="bold" />

                <ImageView
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_9dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mm_createmeeting_icon_dropdown" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_end"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_5dp" >

                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/createmeeting_date_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="@string/text_16"
                    android:textColor="#d6402b"
                    android:textSize="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    custom:txtFont="bold" />

                <ImageView
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_9dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mm_createmeeting_icon_dropdown" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp" >

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/createmeeting_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="@string/text_16"
                android:textColor="#d6402b"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold"
                custom:txtFont="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dimen_14dp"
                android:layout_height="@dimen/dimen_9dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mm_createmeeting_icon_dropdown" />
        </RelativeLayout>
    </LinearLayout>
<!--  android:background="#ebebeb" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
       
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_5dp" >

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" > <!-- style="@style/date_picker_style" -->
        </DatePicker>

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />
    </LinearLayout>

</LinearLayout>