<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.acv.meetmarket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical" >

        <org.com.atmarkcafe.sky.customviews.charting.MTextView
            android:id="@+id/splash_item_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:lines="3"
            android:maxLines="3"
            android:text="@string/text_1"
            android:textColor="#323030"
            android:textSize="@dimen/dimen_14dp"
            custom:txtFont="light" />

        <ImageView
            android:id="@+id/splash_item_img"
            android:layout_width="@dimen/dimen_236dp"
            android:layout_height="@dimen/dimen_266dp"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>