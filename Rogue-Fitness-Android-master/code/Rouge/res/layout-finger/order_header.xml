<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/rogue_header_trackingorder"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp" >

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/text_5"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/dimen_13dp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_2"
            android:gravity="center|right" >

            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:singleLine="true"
                android:text="@string/text_6"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/dimen_11dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="@string/peding_shipment"
                android:paddingLeft="@dimen/dimen_0dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:singleLine="true"
                android:text="1ZXDSSAJSEDBD111"
                android:textColor="#2c8fff"
                android:textColorHint="#2c8fff"
                android:textSize="@dimen/dimen_11dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>