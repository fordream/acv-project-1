<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:adjustViewBounds="true" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_320dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:scaleType="centerCrop" >

        <ProgressBar
            android:id="@+id/home_item_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </LinearLayout>

    <com.acv.rouge.view.HomeImageView
        android:id="@+id/img_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_320dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="@dimen/dimen_25dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:id="@+id/view_2"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_1" />

    <View
        android:id="@+id/view_3"
        android:layout_width="fill_parent"
        android:layout_height="7px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_1"
        android:background="#ffffff" />

    <!-- android:background="@drawable/rogue_button_trackordersmall" -->
    <!--
       android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_42dp"
          android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_30dp"    -->

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/img_1"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >
    </LinearLayout>

</RelativeLayout>